{
	"$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"lineWidth": 80
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"includes": [
			"**",
			"!main.js",
			"!node_modules",
			"!docs/.vitepress/dist/**",
			"!docs/.vitepress/cache/**"
		]
	}
}
