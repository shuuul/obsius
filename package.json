{
	"name": "obsius",
	"version": "0.1.0",
	"description": "Bring AI agents into your Obsidian vault with fine-grained context controls.",
	"main": "main.js",
	"engines": {
		"node": ">=20.19.0"
	},
	"scripts": {
		"dev": "vite build --watch --mode development",
		"typecheck": "tsc --noEmit -skipLibCheck",
		"build": "npm run typecheck && vite build",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"format": "biome format --write .",
		"format:check": "biome format .",
		"lint": "npm run lint:biome && npm run lint:eslint && npm run lint:arch",
		"lint:biome": "biome check src/hooks/state src/shared/settings-schema.ts src/shared/settings-utils.ts src/adapters/acp/update-routing.ts src/adapters/acp/error-diagnostics.ts src/adapters/obsidian/settings-store.adapter.ts test scripts vite.config.ts vitest.config.ts",
		"lint:eslint": "eslint .",
		"lint:fix": "eslint . --fix",
		"lint:arch": "node scripts/check-file-size.mjs && node scripts/check-domain-boundaries.mjs",
		"docs:dev": "vitepress dev docs",
		"docs:build": "vitepress build docs",
		"docs:preview": "vitepress preview docs"
	},
	"keywords": [],
	"author": "",
	"license": "Apache-2.0",
	"devDependencies": {
		"@biomejs/biome": "^2.2.6",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@types/node": "^20.19.17",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"@types/semver": "^7.7.1",
		"@typescript-eslint/parser": "^8.0.0",
		"@typescript-eslint/utils": "^8.0.0",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "^9.0.0",
		"eslint-plugin-obsidianmd": "^0.1.9",
		"jsdom": "^26.1.0",
		"obsidian": "latest",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.0.0",
		"vite": "^7.1.7",
		"vitepress": "^1.6.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@agentclientprotocol/sdk": "^0.14.1",
		"@codemirror/state": "6.5.0",
		"@codemirror/view": "6.38.6",
		"diff": "^8.0.2",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"semver": "^7.7.3",
		"tslib": "^2.8.1",
		"zod": "^3.24.1"
	}
}
